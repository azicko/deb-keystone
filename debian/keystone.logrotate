/var/log/keystone/*.log {
    daily
    missingok
    rotate 5
    compress
    minsize 100k
    create 640 keystone keystone
    postrotate
        if dpkg-vendor --derives-from ubuntu ; then
            service keystone restart >/dev/null 2>&1 || true
        else
            invoke-rc.d keystone restart
        fi
    endscript
}